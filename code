#budget app
import datetime
category_list = [] 
main_balance = {}
category_balance = {}
def Appsetup():
	#Default Setup
	print("Welcome to Setup ***********".upper())
	print("App Name: \tBudget App Planner")
	print("Release Date: \tApril 11, 2021")
	print("Version: \t2.1v")
	print("App Category: \tBusiness/Investment/IT")
	print("Author: \tOlamilekan Olumide")
	print("****"*4)
	resp = input("Install Budget App Planner? Yes/No: ")
	print("****"*4)
	
	if resp.lower() == 'yes' or resp.lower() == 'y':
		print("Setup Process Initiated...".upper())
		print("1. Default Installation\n2. Customize Installation")
		print("****"*4)
		print("Tip: Default Installation will synchronize demo \ncontents from our database\nCustomize Installation will allow you create \nyour own contents")
		print("****"*4)
		resp1 = int(input("Select Process: "))
		if resp1 == 1:
			#use demo content
			print("Demo contents synchronizing...")
		elif resp1 == 2:
			print("Great! Start by creating your Budget Categories")
			budAmt()
			create_cat()
		else:
			print("Wrong Selection")
	else:
		print("invalid input")
	print("****"*4)
	#time.sleep(3)

def budAmt():
	print("****"*4)
	UserSal = float(input("How much is your salary/earning? "))
	budamt = float(input("How much is your budget? "))
	if UserSal > 0 and budamt >0:
		UserSal = UserSal - budamt
		print("You are left with %f to spend throughout\nthis month are you sure you want to continue? "%UserSal)
		main_balance.update('balance')
		budamt = main_balance.update('balance')
		print(main_balance('balance'))
	else:
		print("Wrong values, try again")
		exit()
	
def create_cat():
        number_of_categories = int(input("How many categories do you want to create?: "))
        for num in range(1, number_of_categories+1):
            supply_category = input(f"Supply Category Name {num}: ")
            category_list.append(supply_category)
            
        for category in category_list:
            category_balance[category] = 0
        print("Categories have been successfully created")
        print("Budget Balance is: %f" %main_balance('balance'))
        print(f"List and Balance: {category_balance}\n")
Appsetup()
